
#display_entry
  = image_tag @snapshot.display_png.to_data_url, class: 'picture_display'
  %br
  .picture_name
    = @snapshot.name
    %br
    - if @snapshot.user == current_user
      // = link_to 'Edit In Painter', edit_picture_path(@picture)
      = button_to 'Delete Snapshot', { action: 'destroy', id: @snapshot.id },
          method: :delete, data: { confirm: 'Are you sure you want to destroy this snapshot?' }
